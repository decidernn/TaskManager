<Window x:Class="Task_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_Manager"
        mc:Ignorable="d"
        Title="Task Manager" Height="700" Width="900" WindowStartupLocation="CenterScreen" Icon="Images/logo2.png">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3F613D" />
            <Setter Property="Foreground" Value="#41423c" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3F613D" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Frame NavigationUIVisibility="Hidden" Grid.Row="1" Name ="MainFrame"/>
    </Grid>
</Window>
